

-- book values insertion
-- Create a new stored procedure called 'insertBook' in schema 'dbo.book'
CREATE PROCEDURE [dbo].[bookInsert]
   (@BookID int,
   @BookName varchar(50),
   @Author varchar(50),
   @PublisDate DATETIME 
   @BookNumChar int)
AS
BEGIN
   IF NOT EXISTS (SELECT * FROM Book 
                   WHERE BookID = @BookID
   BEGIN
       insert into  [dbo].[Book] (BookID,BookName,Author,PublishDate,BookNumChar)
        VALUES (@BookID,@BookName, @Author, @PublisDate, @BookNumChar);
   END
END
------------------------------------------------------------------------------

-- word values insertion
CREATE PROCEDURE [dbo].[wordInsert]
(@WordID int,
@wordVlaue varchar(50),
@Value varchar(50),
@BookID int,
@Paragrath int,
@chapter varchar(4),
@Line int)
AS
BEGIN
   
        -- word information values insertion into Word table 
        BEGIN
            IF NOT EXISTS (SELECT * FROM Book 
                   WHERE WordID = @WordID
            BEGIN
            insert into dbo.word (wordID,Value,Length)
            VALUES (@WordID,@Value,LEN(@Value));
        END
        -- word information values insertion into WordImfo table
        insert into dbo.WordInfo (BookID,Line,WordID,Paragrath,Chapter)
         VALUES (@BookID,null,@WordId,null,null);
        

END


-- word gruop values insertion
insert into dbo.wordGroup (GroupID,GroupName,WordID)
VALUES (@WordID,@GroupName, null);

-- phrase values insertion
insert into dbo.WordPhrase (PhraseID,WordID)
VALUES (@PhraseID, null);
